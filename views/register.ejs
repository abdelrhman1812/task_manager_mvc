<%- include('./shared/header.ejs') %>

    <section class="register bg-image"
        style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                                <form action="/auth/handleRegister" method="post">
                                    <% if (error?.length> 0 || validationError?.length > 0) { %>
                                        <span class="text-danger text-center d-block my-2 text-capitalize">
                                            <%= error[0] || validationError[0] %>
                                        </span>
                                        <% } %>
                                            <div data-mdb-input-init class="form-outline mb-4">
                                                <label class="form-label mb-2" for="form3Example1cg">Your Name</label>
                                                <input type="text" name="name" id="form3Example1cg"
                                                    class="form-control form-control-lg"
                                                    value="<%= data?.name || '' %>" />
                                            </div>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                <label class="form-label mb-2" for="form3Example3cg">Your Email</label>
                                                <input type="email" name="email" id="form3Example3cg"
                                                    class="form-control form-control-lg"
                                                    value="<%= data?.email || '' %>" />
                                            </div>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                <label class="form-label mb-2" for="form3Example4cg">Password</label>
                                                <input type="password" name="password" id="form3Example4cg"
                                                    class="form-control form-control-lg"
                                                    value="<%= data?.password || '' %>" />
                                            </div>



                                            <div class="d-flex justify-content-center">
                                                <button type="submit" data-mdb-button-init data-mdb-ripple-init
                                                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                                            </div>

                                            <p class="text-center text-muted mt-5 mb-0">Have already an account? <a
                                                    href="/auth/login" class="fw-bold text-body"><u>Login here</u></a>
                                            </p>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <%- include('./shared/footer.ejs') %>